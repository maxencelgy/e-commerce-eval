{% extends 'base.html.twig' %}

{% block body %}
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <!-- ***** Contact Area Starts ***** -->
    <br>
    <div class="contact-us">
        <div class="container">
            <div style="">
                <div class="">
                    <div class="section-heading">
                        <h2>Insert montre</h2>
                        <span>Lorem ipsum dolor sit amet, consectetur adipisicing !</span>
                    </div>

                    <form id="contact" name="sign" method="post">
                        <div class="row">
                            <div class="col-lg-6" style="margin-bottom: 1rem">
                                <fieldset>
                                    <input name="name" type="text" id="name" placeholder="Name" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-6" style="margin-bottom: 1rem">
                                <fieldset>
                                    <input name="price" type="number" id="price" placeholder="price" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-6" style="margin-bottom: 1rem">
                                <label for="categories_id">Choisissez une categorie</label>
                                <br>
                                <select name="categories_id" id="">
                                    <option value="">Choose categorie</option>
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-lg-6">
                                <fieldset>
                                    <input name="image" type="text" id="image" placeholder="image url" required="">
                                </fieldset>
                                <textarea name="description" placeholder="Description">
                                 Enter your description here...
                                </textarea>
                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit"><i class="fa fa-paper-plane"></i></button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Contact Area Ends ***** -->

    <!-- ***** Subscribe Area Starts ***** -->


{% endblock %}
